
@{
    ViewBag.Title = "CompaignInfo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-xxl flex-grow-1 container-p-y">
    <div class="card mb-4">
        @*<h5 class="card-header">Multi Column with Form Separator</h5>*@
        <form class="card-body">
            <h5 class="text-primary">Personal Details</h5>
            <div class="row g-3">

                <div class="col-md-4">
                    <label class="text-black font-w600 form-label" for="multicol-username">FIRST NAME</label>
                    <input type="text" id="multicol-username" class="form-control" placeholder="" />
                </div>
                <div class="col-md-4">
                    <label class="text-black font-w600 form-label" for="multicol-username">LAST NAME</label>
                    <input type="text" id="multicol-username" class="form-control" placeholder="" />
                </div>
                <div class="col-md-4">
                    <label class="text-black font-w600 form-label" for="multicol-username">EMAIL</label>
                    <input type="text" id="multicol-username" class="form-control" placeholder="" />
                </div>
                <div class="col-md-4">
                    <label class="text-black font-w600 form-label" for="multicol-username">PHONE</label>
                    <input type="text" id="multicol-username" class="form-control" placeholder="" />
                </div>
                <div class="col-md-4">
                    <label class="text-black font-w600 form-label" for="multicol-country">GENDER</label>
                    <select id="multicol-country" class="form-control select2 form-select" data-allow-clear="true">
                        <option value="">Select</option>
                        <option value="Australia">Male</option>
                        <option value="Bangladesh">Female</option>
                        <option value="United States">Not Specified</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <div class="text-light small fw-semibold mb-3">Active</div>
                    <label class="switch switch-square">
                        <input type="checkbox" class="switch-input">
                        <span class="switch-toggle-slider">
                            <span class="switch-on"></span>
                            <span class="switch-off"></span>
                        </span>
                        <span class="switch-label">ACTIVE</span>
                    </label>
                </div>
            </div>
            <hr class="my-4 mx-n4">
            <h5 class="text-primary">Roles</h5>
            <div class="row g-3">
                <div class="col-md-4">
                    <label class="text-black font-w600 form-label" for="multicol-country">ROLE</label>
                    <select id="multicol-country" class="select2 form-select form-control" data-allow-clear="true">
                        <option value="">Select</option>
                        <option value="Australia">Australia</option>
                        <option value="Bangladesh">Bangladesh</option>
                        <option value="United States">United States</option>
                    </select>
                </div>

                <div class="col-md-4 select2-primary">
                    <label class="text-black font-w600 form-label" for="multicol-language">DEALERSHIPS/BUSINESS ASSIGNMENTS</label>
                    <select id="multicol-language" class="select2 form-select js-example-basic-multiple form-control" multiple>
                        <option value="en" selected>English</option>
                        <option value="fr" selected>French</option>
                        <option value="de">German</option>
                        <option value="pt">Portuguese</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <label class="text-black font-w600 form-label" for="multicol-username">DEPARTMENT</label><br>
                    <div class="form-check form-check-inline">
                        <input name="collapsible-address-type" class="form-check-input" type="radio" value="" id="collapsible-address-type-home" checked="">
                        <label class="form-check-label" for="collapsible-address-type-home">SALES</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input name="collapsible-address-type" class="form-check-input" type="radio" value="" id="collapsible-address-type-office">
                        <label class="form-check-label" for="collapsible-address-type-office">SERVICE</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input name="collapsible-address-type" class="form-check-input" type="radio" value="" id="collapsible-address-type-office1">
                        <label class="form-check-label" for="collapsible-address-type-office1">SALE & SERVICE </label>
                    </div>
                </div>

                <div class="mb-3 col-md-4 form-password-toggle fv-plugins-icon-container">
                    <label class="text-black font-w600 form-label" for="currentPassword"> PASSWORD</label>
                    <div class="input-group input-group-merge has-validation">
                        <input class="form-control" type="password" name="currentPassword" id="currentPassword" placeholder="············">
                       
                    </div>
                </div>
            </div>
            <hr class="my-4 mx-n4">
            <h5 class="text-primary">Goals</h5>
            <div class="row g-3">
                <div class="row g-3">
                    <h5 class="text-primary">Sales Goals</h5>
                    <div class="col-md-2">
                        <label class="text-black font-w600 form-label" for="multicol-username"><i class="fa fa-heartbeat" style="color:red"></i> ACTIVITIES</label>
                        <input type="text" id="multicol-username" class="form-control" placeholder="" />
                    </div>
                    <div class="col-md-2">
                        <label class="text-black font-w600 form-label" for="multicol-username"><i class="fa fa-dollar-sign" style="color:rebeccapurple"></i> ACTIVITIES (90%) </label>
                        <input type="text" id="multicol-username" class="form-control" placeholder="" />
                    </div>
                    <div class="col-md-2">
                        <label class="text-black font-w600 form-label" for="multicol-username"><i class="fa fa-dollar-sign" style="color:green"></i> CALLS (77%)</label>
                        <input type="text" id="multicol-username" class="form-control" placeholder="" />
                    </div>
                    <div class="col-md-2">
                        <label class="text-black font-w600 form-label" for="multicol-username"><i class="fa fa-dollar-sign" style="color:orange"></i> CONTACTS (33%)</label>
                        <input type="text" id="multicol-username" class="form-control" placeholder="" />
                    </div>
                    <div class="col-md-2">
                        <label class="text-black font-w600 form-label" for="multicol-username"><i class="fa fa-calendar-alt" style="color:darkcyan"></i> APPOINTMENTS (26%)</label>
                        <input type="text" id="multicol-username" class="form-control" placeholder="" />
                    </div>
                </div>
                <div class="row g-3">
                    <h5 class="text-primary">Service Goals</h5>
                    <div class="col-md-2">
                        <label class="text-black font-w600 form-label" for="multicol-username"><i class="fa fa-heartbeat" style="color:red"></i> ACTIVITIES</label>
                        <input type="text" id="multicol-username" class="form-control" placeholder="" />
                    </div>
                    <div class="col-md-2">
                        <label class="text-black font-w600 form-label" for="multicol-username"><i class="fa fa-dollar-sign" style="color:rebeccapurple"></i> ACTIVITIES (80%) </label>
                        <input type="text" id="multicol-username" class="form-control" placeholder="" />
                    </div>
                    <div class="col-md-2">
                        <label class="text-black font-w600 form-label" for="multicol-username"><i class="fa fa-dollar-sign" style="color:green"></i> CALLS (100%)</label>
                        <input type="text" id="multicol-username" class="form-control" placeholder="" />
                    </div>
                    <div class="col-md-2">
                        <label class="text-black font-w600 form-label" for="multicol-username"><i class="fa fa-dollar-sign" style="color:orange"></i> CONTACTS (62%)</label>
                        <input type="text" id="multicol-username" class="form-control" placeholder="" />
                    </div>
                    <div class="col-md-2">
                        <label class="text-black font-w600 form-label" for="multicol-username"><i class="fa fa-calendar-alt" style="color:darkcyan"></i> APPOINTMENTS (60%)</label>
                        <input type="text" id="multicol-username" class="form-control" placeholder="" />
                    </div>
                </div>
               

            </div>

                <div class="pt-4 text-right">
                    <button type="submit" class="btn btn-primary me-sm-3 me-1">Submit</button>
                    <button type="reset" class="btn btn-danger light me-sm-3 me-1">Cancel</button>
                    <a href="@Url.Action("Users","Admin")"><button type="button" class="btn btn-warning light">Back</button></a>
                </div>
</form>
    </div>
</div>



<script src="/assets/js/jquery-3.2.1.min.js"></script>
<script>

    $(document).ready(function () {
        $('.js-example-basic-multiple').select2();
        $(".nav li").removeClass("active");
        $('#Users').addClass('active');
    });
</script>