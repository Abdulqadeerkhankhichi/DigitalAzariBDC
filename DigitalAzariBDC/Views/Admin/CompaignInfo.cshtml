
@{
    ViewBag.Title = "CompaignInfo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-xxl flex-grow-1 container-p-y">
    <div class="card mb-4">
        @*<h5 class="card-header">Multi Column with Form Separator</h5>*@
        <form class="card-body">
            <h5 class="text-primary">Compaign Details</h5>
            <div class="row g-3">
                <div class="col-md-6">
                    <label class="text-black font-w600 form-label" for="multicol-username">DEPARTMENT</label><br>
                    <div class="form-check form-check-inline">
                        <input name="collapsible-address-type" class="form-check-input" type="radio" value="" id="collapsible-address-type-home" checked="">
                        <label class="form-check-label" for="collapsible-address-type-home">SALES</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input name="collapsible-address-type" class="form-check-input" type="radio" value="" id="collapsible-address-type-office">
                        <label class="form-check-label" for="collapsible-address-type-office">SERVICE</label>
                    </div>
                </div>


                <div class="col-md-6">
                    <label class="text-black font-w600 form-label" for="multicol-username">CAMPAIGN NAME</label>
                    <input type="text" id="multicol-username" class="form-control" placeholder="" />
                </div>

                <div class="col-md-6">
                    <div class="form-password-toggle">
                        <label class="text-black font-w600 form-label" for="multicol-Startdate">START DATE</label>
                        <input type="text" id="multicol-Startdate" class="form-control flatpickr-validation flatpickr-input" placeholder="YYYY-MM-DD">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-password-toggle">
                        <label class="text-black font-w600 form-label" for="multicol-Endhdate">END DATE</label>
                        <input type="text" id="multicol-Endhdate" class="form-control flatpickr-validation flatpickr-input" placeholder="YYYY-MM-DD">
                    </div>
                </div>
                <div class="col-md-6">
                    <label class="text-black font-w600 form-label" for="multicol-country">MARKETING SOURCE</label>
                    <select id="multicol-country" class="select2 form-select form-control" data-allow-clear="true">
                        <option value="">Select</option>
                        <option value="Australia">Australia</option>
                        <option value="Bangladesh">Bangladesh</option>
                        <option value="United States">United States</option>
                    </select>
                </div>
                <div class="col-md-6 select2-primary">
                    <label class="text-black font-w600 form-label" for="multicol-language">PARTICIPATING DEALERSHIPS/BUSINESS</label>
                    <select id="multicol-language" class="select2 form-select js-example-basic-multiple form-control" multiple>
                        <option value="en" selected>English</option>
                        <option value="fr" selected>French</option>
                        <option value="de">German</option>
                        <option value="pt">Portuguese</option>
                    </select>
                </div>
                <div class="col-md-6">
                    <label class="text-black font-w600 form-label" for="multicol-username">SHOW PAY AMOUNT</label>
                    <input type="text" id="multicol-username" class="form-control" placeholder="" />
                </div>
                <div class="col-md-4">
                    <div class="text-light small fw-semibold mb-3">Active</div>
                    <label class="switch switch-square">
                        <input type="checkbox" class="switch-input">
                        <span class="switch-toggle-slider">
                            <span class="switch-on"></span>
                            <span class="switch-off"></span>
                        </span>
                        <span class="switch-label">ACTIVE</span>
                    </label>
                </div>
                
            </div>

            <div class="pt-4 text-right">
                <button type="submit" class="btn btn-primary me-sm-3 me-1">Submit</button>
                <button type="reset" class="btn btn-danger light me-sm-3 me-1">Cancel</button>
                <a href="@Url.Action("Compaign","Admin")"><button type="button" class="btn btn-warning light">Back</button></a>
            </div>
        </form>
    </div>

</div>

<script src="/assets/js/jquery-3.2.1.min.js"></script>
<script>

    $(document).ready(function () {
        $('.js-example-basic-multiple').select2();
        $(".nav li").removeClass("active");
        $('#Compaigns').addClass('active');
    });
</script>