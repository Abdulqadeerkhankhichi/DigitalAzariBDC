<!DOCTYPE html>
<html lang="en" class="h-100">
@{
    Layout = null;
}
<head>
    <!-- PAGE TITLE HERE -->
    <title>ResetPassword Digital Azari</title>

    <!-- FAVICONS ICON -->
    <link rel="shortcut icon" type="image/png" href="images/favicon.png" />
    <link href="~/assets/css/style.css" rel="stylesheet">
    <style>
        .form-control {
            background: #fff;
            border: 0.0625rem solid #eee9e9;
            padding: 0.3125rem 1.25rem;
            color: #6e6e6e;
            height: 3.0rem;
            border-radius: 1rem;
        }
    </style>
</head>

<body class="vh-100">
    <div class="authincation h-100">
        <div class="container h-100">
            <div class="row justify-content-center h-100 align-items-center">
                <div class="col-md-6">
                    <div class="authincation-content">
                        <div class="row no-gutters">
                            <div class="col-xl-12">
                                <div class="auth-form">
                                    <div class="text-center mb-3">
                                        <a href="#"><img style="width:50%" src="~/assets/images/logo.jpg" alt=""></a>
                                    </div>
                                    <h4 class="text-center mb-4">Reset Password 🔒</h4>
                                    <form id="formAuthentication" action="@Url.Action("ResetPassword","Account")" class="mb-3" method="POST">
                                        <input type="text" value="@ViewBag.Email" hidden name="Email">
                                        <div class="mb-3">
                                            <label class="mb-1"><strong>New Password</strong></label>
                                            <input type="password" id="password" class="form-control" name="NewPassword" required>
                                        </div>
                                        <div class="mb-3">
                                            <label class="mb-1"><strong>Confirm Password</strong></label>
                                            <input type="password" class="form-control" id="confirm-password" name="ConfirmPassword" required>
                                        </div>
                                        <div class="row d-flex justify-content-between mt-4 mb-2">

                                           
                                        </div>
                                        <div class="text-center">
                                            <button type="submit" class="btn btn-primary btn-block"> Set new password</button>
                                        </div>
                                        <br>
                                        <div class="mb-3">
                                            <a href="@Url.Action("Login","Account")" class="d-flex align-items-center justify-content-center">
                                                <i class="bx bx-chevron-left scaleX-n1-rtl bx-sm"></i>
                                                Back to login
                                            </a>
                                        </div>
                                    </form>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!--**********************************
        Scripts
    ***********************************-->
    <!-- Required vendors -->
    <script src="~/assets/vendor/global/global.min.js"></script>
    <script src="~/assets/js/custom.min.js"></script>
    <script src="~/assets/js/deznav-init.js"></script>

</body>
</html>